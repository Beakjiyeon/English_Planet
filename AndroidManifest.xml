<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.tensorflow.yolo">

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_launcher"
        android:label="E-Planet"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".TutorialActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".view.ClassifierActivity"
            android:label="@string/activity_name_classification"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.CameraActivity" />
        <activity
            android:name=".view.CameraWordBookActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".PlanetListActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".PlanetActivity1"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".PlanetActivity2"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".PlanetActivity3"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".SignupActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".BookActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"></activity>
        <activity
            android:name=".SentenceActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".ScoreActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".WordanswerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".WordquizActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen" />
        <activity
            android:name=".MypageActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"/>
        <activity android:name=".SenquizActivity"
            android:screenOrientation="landscape"
            android:theme="@style/fullScreen"
            />

    </application>

</manifest>