<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/cookierun_bold"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Chapter1."></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/cookierun_bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:text="Animals You Can See At the Zoo"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_bg"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp">
        </ImageView>

        <TextView
            android:id="@+id/book_text1"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="91dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/book_text2"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:layout_below="@id/book_text1"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/book_text3"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:layout_below="@id/book_text2"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"></TextView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="60dp"
            android:background="#69F0AE"
            android:fontFamily="@font/cookierun_bold"
            android:onClick="btnNext"
            android:text="Next â†’"
            android:textColor="#000000" />

    </RelativeLayout>




</LinearLayout>