<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    android:textAlignment="center">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/setting_box"
            android:layout_width="600dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@drawable/setting_box"></ImageView>


        <Button
            android:id="@+id/modify_enter"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_confirm2"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/cookierun_bold"
                    android:text="아이디"
                    android:textSize="20dp">

                </TextView>

                <EditText
                    android:id="@+id/m_user_id"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:width="300dp"
                    android:background="#FFFFFF"
                    android:duplicateParentState="false"></EditText>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/cookierun_bold"
                    android:text="  닉네임"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/m_user_nickname"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:width="300dp"
                    android:background="#FFFFFF"></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/cookierun_bold"
                    android:text="비밀번호"
                    android:gravity="center"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/m_user_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:width="300dp"
                    android:background="#FFFFFF"
                    android:inputType="textPassword"></EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/cookierun_bold"
                    android:text="비밀번호\n확인"
                    android:gravity="center"
                    android:textSize="20dp"></TextView>

                <EditText
                    android:id="@+id/m_user_pwd2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:width="300dp"
                    android:background="#FFFFFF"
                    android:inputType="textPassword"></EditText>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>